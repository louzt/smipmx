---
// Header component for SMIPMX
---

<header class="fixed w-full bg-smip-black bg-opacity-90 text-smip-white z-50">
    <div class="container mx-auto px-4 py-4">
        <nav class="flex justify-between items-center">
            <div class="text-2xl font-bold">SMIPMX</div>
            <ul class="hidden md:flex space-x-6">
                <li><a href="/" class="hover:text-smip-red transition-colors">Inicio</a></li>
                <li><a href="#servicios" class="hover:text-smip-red transition-colors">Servicios</a></li>
                <li><a href="#nosotros" class="hover:text-smip-red transition-colors">Nosotros</a></li>
                <li><a href="#clientes" class="hover:text-smip-red transition-colors">Clientes</a></li>
                <li><a href="#contacto" class="hover:text-smip-red transition-colors">Contacto</a></li>
            </ul>
            <button class="md:hidden" id="mobile-menu-button">
                <span class="block w-6 h-0.5 bg-white mb-1"></span>
                <span class="block w-6 h-0.5 bg-white mb-1"></span>
                <span class="block w-6 h-0.5 bg-white"></span>
            </button>
        </nav>
        <div class="hidden md:hidden" id="mobile-menu">
            <ul class="pt-4">
                <li><a href="/" class="block py-2">Inicio</a></li>
                <li><a href="#servicios" class="block py-2">Servicios</a></li>
                <li><a href="#nosotros" class="block py-2">Nosotros</a></li>
                <li><a href="#clientes" class="block py-2">Clientes</a></li>
                <li><a href="#contacto" class="block py-2">Contacto</a></li>
            </ul>
        </div>
    </div>
</header>

<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>
