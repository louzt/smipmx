<style>
    /* Efecto Ken Burns */
    .ken-burns {
        animation: kenBurns 20s infinite alternate;
        transform-origin: center;
    }

    @keyframes kenBurns {
        0% {
            transform: scale(1.0);
        }
        100% {
            transform: scale(1.1);
        }
    }

    .fade-in {
        animation: fadeIn 1.2s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    // Imágenes industriales de stock relacionadas con maquinados, manufactura y mantenimiento industrial
    const images = [
        "https://images.pexels.com/photos/162568/oil-pump-jack-sunset-clouds-silhouette-162568.jpeg", // Maquinaria industrial
        "https://images.pexels.com/photos/1108101/pexels-photo-1108101.jpeg", // Soldadura industrial
        "https://images.pexels.com/photos/2760243/pexels-photo-2760243.jpeg", // Fabricación de piezas metálicas
        "https://images.pexels.com/photos/1267338/pexels-photo-1267338.jpeg", // Maquinaria pesada
        "https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg", // Piezas metálicas y engranajes
        "https://images.pexels.com/photos/3822850/pexels-photo-3822850.jpeg" // Mantenimiento industrial
    ];
    
    let currentImageIndex = 0;
    const carouselImages = document.querySelector('.carousel-images');
    
    function changeBackgroundImage() {
        const oldImage = carouselImages.querySelector('img');
        const newImage = document.createElement('img');
        
        // Configurar la nueva imagen
        currentImageIndex = (currentImageIndex + 1) % images.length;
        newImage.src = images[currentImageIndex];
        newImage.alt = "Ambientes industriales";
        newImage.className = "absolute inset-0 w-full h-full object-cover ken-burns opacity-0";
        
        // Añadir la nueva imagen
        carouselImages.appendChild(newImage);
        
        // Transición de opacidad
        setTimeout(() => {
            newImage.classList.replace('opacity-0', 'opacity-100');
            newImage.style.transition = 'opacity 1s ease-in-out';
            
            if (oldImage) {
                oldImage.classList.replace('opacity-100', 'opacity-0');
                oldImage.style.transition = 'opacity 1s ease-in-out';
                
                // Remover imagen anterior después de la transición
                setTimeout(() => {
                    oldImage.remove();
                }, 1000);
            }
        }, 50);
    }
    
    // Cambiar imagen cada 8 segundos
    setInterval(changeBackgroundImage, 8000);
    
    // Manejar el formulario
    const form = document.getElementById('newsletterForm');
    
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const emailInput = form.querySelector('input[type="email"]');
        const email = emailInput.value;
        
        // Aquí iría la lógica para enviar el email al servidor
        console.log('Email subscrito:', email);
        
        // Simular éxito
        emailInput.value = '';
        alert('¡Gracias por suscribirte! Te enviaremos un correo de confirmación.');
    });
</script>