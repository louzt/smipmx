---

<section id="servicios" class="bg-smip-black w-full relative">
    <!-- Hero de Servicios con video -->
    <div class="h-[60vh] relative overflow-hidden">
        <div class="absolute inset-0">
            <!-- Video principal -->
            <div class="absolute inset-0">
                <video 
                    class="w-full h-full object-cover"
                    autoplay 
                    muted 
                    playsinline
                    loop
                    id="serviceVideo"
                    poster="/images/assets/fotos card servicios/Fabricación de partes mecánicas en procesos de maquinado.png"
                >
                    <source src="/images/assets/videos/3987526-sd_960_540_25fps.mp4" type="video/mp4">
                </video>
            </div>

            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-smip-black"></div>
        </div>
        <div class="relative z-10 container mx-auto px-4 h-full flex flex-col justify-center items-center text-center">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Soluciones Integrales</h2>
            <p class="text-xl text-white/80">Diseño, fabricación y mantenimiento industrial de precisión</p>
        </div>
    </div>

    <!-- Carrusel de Servicios con overlap -->
    <div class="container mx-auto md:px-4 -mt-32 relative z-20">
        <div class="bg-smip-black/95 rounded-xl p-4 md:p-8 shadow-2xl">
            <!-- Carrusel -->
            <div class="overflow-hidden relative">
                <div class="services-track flex transition-transform duration-500 ease-in-out mx-auto">
                    {services.map((service, index) => (
                        <div class="flex-none w-full md:w-[calc(33.333%-1rem)] px-2 md:px-3 service-slide">
                            <div class="bg-white/10 backdrop-blur rounded-lg overflow-hidden hover-lift h-full">
                                <!-- Contenedor de la imagen con altura fija -->
                                <div class="relative overflow-hidden h-[300px] md:h-[400px]">
                                    <Image 
                                        src={service.image} 
                                        alt={service.title}
                                        class="w-full h-full object-cover object-bottom transition-transform duration-500 hover:scale-110"
                                    />
                                    <!-- Ícono en la esquina superior -->
                                    <div class="absolute top-4 right-4 bg-smip-red rounded-full p-2">
                                        <span class="icon text-white" set:html={service.icon} />
                                    </div>
                                </div>
                                <div class="p-6 md:p-8 text-white relative">
                                    <h3 class="text-2xl font-bold mb-4">{service.title}</h3>
                                    <p class="opacity-80 mb-6">{service.description}</p>
                                    <a 
                                        href={`https://wa.me/524442571717?text=${encodeURIComponent(service.whatsappText)}`}
                                        target="_blank"
                                        class="inline-flex items-center justify-center gap-2 bg-smip-red w-full px-6 py-3 rounded-lg transition-all duration-300 hover:bg-red-700 group"
                                    >
                                        <span>{service.cta}</span>
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>

                <!-- Gradiente en los bordes para efecto infinito -->
                <div class="absolute left-0 top-0 bottom-0 w-8 bg-gradient-to-r from-smip-black/95 to-transparent pointer-events-none z-10"></div>
                <div class="absolute right-0 top-0 bottom-0 w-8 bg-gradient-to-l from-smip-black/95 to-transparent pointer-events-none z-10"></div>
            </div>

            <!-- Controles de navegación -->
            <button class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 rounded-full p-3 transition-colors prev-slide z-10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <button class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/10 hover:bg-white/20 rounded-full p-3 transition-colors next-slide z-10">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>

            <!-- Paginación -->
            <div class="flex justify-center gap-2 mt-8">
                {services.map((_, index) => (
                    <button 
                        class="w-3 h-3 rounded-full bg-white/30 hover:bg-white/50 transition-colors pagination-dot"
                        data-index={index}
                        aria-label={`Ir al servicio ${index + 1}`}>
                    </button>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    .services-track {
        transform: translateX(0);
        width: max-content;
    }

    .service-slide {
        opacity: 0.7;
        transition: all 0.5s ease;
    }

    .service-slide.active {
        opacity: 1;
        transform: scale(1.02);
        z-index: 5;
    }

    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.2);
    }

    .icon {
        height: 24px;
        width: 24px;
    }

    @media (max-width: 768px) {
        .service-slide {
            width: 100%;
            margin: 0 auto;
        }
        
        .services-track {
            padding-left: 0;
            padding-right: 0;
        }
    }

    @media (min-width: 769px) {
        .service-slide {
            width: calc(33.333% - 1rem);
        }
    }
</style>

<script>
    const track = document.querySelector('.services-track') as HTMLElement;
    const slides = document.querySelectorAll('.service-slide') as NodeListOf<HTMLElement>;
    const dots = document.querySelectorAll('.pagination-dot');
    const prevBtn = document.querySelector('.prev-slide');
    const nextBtn = document.querySelector('.next-slide');
    
    let currentIndex = 0;
    let startX: number;
    let isDragging = false;
    let slideWidth = slides[0]?.offsetWidth + 24; // Incluye el padding
    let totalSlides = slides.length;
    
    function updateSlideWidth() {
        slideWidth = slides[0]?.offsetWidth + 24;
    }
    
    // Clonar elementos para crear el efecto de carrusel infinito
    function setupInfiniteCarousel() {
        // No clonar si hay suficientes slides para llenar la pantalla
        if (totalSlides <= 3) return;
        
        // Clonar los primeros slides y añadirlos al final
        for (let i = 0; i < 3; i++) {
            if (slides[i]) {
                const clone = slides[i].cloneNode(true) as HTMLElement;
                track.appendChild(clone);
            }
        }
        
        // Clonar los últimos slides y añadirlos al principio
        for (let i = totalSlides - 1; i >= Math.max(0, totalSlides - 3); i--) {
            if (slides[i]) {
                const clone = slides[i].cloneNode(true) as HTMLElement;
                track.insertBefore(clone, track.firstChild);
            }
        }
        
        // Ajustar el índice inicial para compensar los slides clonados al principio
        currentIndex = 3;
        updateSlides(currentIndex, false);
    }
    
    function updateSlides(index: number, withAnimation = true) {
        if (!track) return;
        
        // Calcular cuántos slides mostrar según ancho de pantalla
        let visibleSlides = 1; // Por defecto para móviles
        if (window.innerWidth >= 768) {
            visibleSlides = 3; // En desktop mostramos 3 slides
        }
        
        // Manejar efecto infinito
        const allSlides = document.querySelectorAll('.service-slide');
        const totalSlidesWithClones = allSlides.length;
        
        // Si llega al final, saltar al inicio sin animación
        if (index >= totalSlidesWithClones - visibleSlides) {
            index = 3; // Ir al inicio (después de los clones)
            withAnimation = false;
        } else if (index < 3) {
            index = totalSlidesWithClones - visibleSlides - 3;
            withAnimation = false;
        }
        
        // Actualizar posición del carrusel
        const offset = -index * slideWidth;
        track.style.transition = withAnimation ? 'transform 0.5s ease-in-out' : 'none';
        track.style.transform = `translateX(${offset}px)`;
        
        // Actualizar estado visual de activo solo en slides visibles
        allSlides.forEach((slide, i) => {
            if (i >= index && i < index + visibleSlides) {
                slide.classList.add('active');
            } else {
                slide.classList.remove('active');
            }
        });
        
        // Actualizar paginación
        const originalIndex = (index - 3) % totalSlides;
        dots.forEach((dot, i) => {
            if (i === originalIndex) {
                dot.classList.add('bg-white');
                dot.classList.remove('bg-white/30');
            } else {
                dot.classList.remove('bg-white');
                dot.classList.add('bg-white/30');
            }
        });
        
        currentIndex = index;
    }
    
    // Navegar al siguiente slide
    function nextSlide() {
        updateSlides(currentIndex + 1);
    }
    
    // Navegar al slide anterior
    function prevSlide() {
        updateSlides(currentIndex - 1);
    }

    // Event Listeners
    prevBtn?.addEventListener('click', prevSlide);
    nextBtn?.addEventListener('click', nextSlide);

    dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
            updateSlides(index + 3); // +3 para compensar los clones
        });
    });

    // Touch/Mouse events para swipe
    track?.addEventListener('mousedown', (e) => {
        isDragging = true;
        startX = e.pageX - (track.offsetLeft || 0);
        track.style.transition = 'none';
    });

    track?.addEventListener('touchstart', (e) => {
        isDragging = true;
        startX = e.touches[0].pageX - (track.offsetLeft || 0);
        track.style.transition = 'none';
    });

    window.addEventListener('mousemove', (e) => {
        if (!isDragging) return;
        e.preventDefault();
        const x = e.pageX - (track.offsetLeft || 0);
        const walk = (x - startX);
        const current = -currentIndex * slideWidth;
        track.style.transform = `translateX(${current + walk}px)`;
    });

    window.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        const x = e.touches[0].pageX - (track.offsetLeft || 0);
        const walk = (x - startX);
        const current = -currentIndex * slideWidth;
        track.style.transform = `translateX(${current + walk}px)`;
    });

    function handleDragEnd(e: MouseEvent | TouchEvent) {
        if (!isDragging) return;
        isDragging = false;
        
        const x = 'touches' in e ? e.changedTouches[0].pageX : e.pageX;
        const walk = (x - startX);
        
        if (Math.abs(walk) > slideWidth / 3) {
            if (walk > 0) {
                prevSlide();
            } else {
                nextSlide();
            }
        } else {
            updateSlides(currentIndex);
        }
    }

    window.addEventListener('mouseup', handleDragEnd);
    window.addEventListener('touchend', handleDragEnd);

    // Actualizar en resize
    window.addEventListener('resize', () => {
        updateSlideWidth();
        updateSlides(currentIndex, false);
    });

    // Inicialización
    document.addEventListener('DOMContentLoaded', () => {
        updateSlideWidth();
        setupInfiniteCarousel();
        
        // Autoplay
        setInterval(() => {
            if (!document.hidden) {
                nextSlide();
            }
        }, 5000);
        
        // Inicializar video
        const serviceVideo = document.getElementById('serviceVideo') as HTMLVideoElement;
        if (serviceVideo) {
            serviceVideo.load();
            const promise = serviceVideo.play();
            if (promise !== undefined) {
                promise.catch(error => {
                    console.error("Error playing service video:", error);
                    document.addEventListener('click', () => {
                        serviceVideo.play().catch(console.error);
                    }, { once: true });
                });
            }
        }
    });
</script>