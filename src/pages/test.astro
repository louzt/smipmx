---
import Layout from '../layouts/Layout.astro';
import { executeQuery, TEST_QUERY } from '../lib/graphqlClient';

const { data, error } = await executeQuery(TEST_QUERY);
---

<Layout title="Test GraphQL">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-4">Test de Conexi√≥n GraphQL</h1>
        
        {error ? (
            <div class="bg-red-100 text-red-700 p-4 rounded">
                Error: {error}
            </div>
        ) : (
            <div class="bg-green-100 text-green-700 p-4 rounded">
                <pre>{JSON.stringify(data, null, 2)}</pre>
            </div>
        )}
    </div>
</Layout>